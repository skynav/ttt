<?xml version="1.0" encoding="utf-8"?>
<!-- valid - tts:opacity on image in inline contexts (not exhaustive) -->
<tt xml:lang="en" xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter" ttp:profile="ttml2-transformation"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2">
  <head/>
  <body>
    <div>
      <p>
        <image src="../resources/test.png" type="image/png" tts:opacity="0"/>
        <image src="../resources/test.png" type="image/png" tts:opacity="0.5"/>
        <image src="../resources/test.png" type="image/png" tts:opacity="1"/>
        <span>
          <image src="../resources/test.png" type="image/png" tts:opacity="0"/>
          <image src="../resources/test.png" type="image/png" tts:opacity="0.5"/>
          <image src="../resources/test.png" type="image/png" tts:opacity="1"/>
        </span>
      </p>
    </div>
  </body>
</tt>


