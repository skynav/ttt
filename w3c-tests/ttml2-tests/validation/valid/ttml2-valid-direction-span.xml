<?xml version="1.0" encoding="utf-8"?>
<!-- valid - span with tts:direction -->
<tt xml:lang="en" xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter" ttp:profile="ttml2-transformation"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2">
  <head>
    <layout>
      <region xml:id="ltrRegion" tts:writingMode="lr"/>
      <region xml:id="rtlRegion" tts:writingMode="rl"/>
    </layout>
  </head>
  <body>
    <div>
      <p region="ltrRegion">                            <!-- default paragraph embedding level is ltr -->
        <span tts:direction="rtl">RTL</span>
      </p>
      <p region="rtlRegion">                            <!-- default paragraph embedding level is rtl -->
        <span tts:direction="ltr">LTR</span>
      </p>
    </div>
  </body>
</tt>
