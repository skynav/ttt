    <div region="r1">
      <p begin="0s" end="1s" tts:rubyPosition="after">
        <span tts:ruby="container">
          <span tts:ruby="baseContainer">
            <span tts:ruby="base">畏怖</span>
          </span>
          <span tts:ruby="textContainer" tts:fontSize="50%">
            <span tts:ruby="text">いふ</span>
          </span>
        </span>
      </p>
    </div>
  </body>
