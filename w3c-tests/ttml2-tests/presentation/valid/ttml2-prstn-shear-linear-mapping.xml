<?xml version="1.0" encoding="UTF-8"?>
<tt xml:lang="ja"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    ttp:profile="ttml2-presentation"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2">
  <head>
    <metadata>
      <ttm:desc>#shear - linear mapping</ttm:desc>
    </metadata>
    <styling>
      <style xml:id="sRegion" tts:showBackground="whenActive" tts:backgroundColor="black" tts:displayAlign="center"/>
      <style xml:id="sText" tts:color="white" tts:textAlign="center" tts:fontSize="6.67rh" tts:lineHeight="8.0rh"/>
      <!-- specify tts:bpd on sheared paragraphs, otherwise uses region's bpd (available space) for shear computation -->
      <style xml:id="sBpd" tts:bpd="16.0rh"/>
    </styling>
    <layout>
      <region xml:id="horizontal" style="sRegion sText" tts:extent="40% 60%" tts:origin="5% 5%"/>
      <region xml:id="vertical" style="sRegion sText" tts:origin="55% 5%" tts:extent="40% 60%" tts:writingMode="tblr"/>
      <region xml:id="caption" style="sRegion sText" tts:origin="10% 75%" tts:extent="80% 20%"/>
    </layout>
  </head>
  <body>
    <div begin="0s" end="1s">
      <p region="caption">Zero shear</p>
      <p region="horizontal" style="sBpd" tts:shear="0%">0%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="0%">0%<br/>三日坊主</p>
    </div>
    <div begin="1s" end="2s">
      <p region="caption">Positive shear</p>
      <p region="horizontal" style="sBpd" tts:shear="16.78842%">16.78842%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="16.78842%">16.78842%<br/>三日坊主</p>
    </div>
    <div begin="2s" end="3s">
      <p region="caption">Positive shear</p>
      <p region="horizontal" style="sBpd" tts:shear="50%">50%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="50%">50%<br/>三日坊主</p>
    </div>
    <div begin="3s" end="4s">
      <p region="caption">Positive shear</p>
      <p region="horizontal" style="sBpd" tts:shear="64.333%">64.333%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="64.333%">64.333%<br/>三日坊主</p>
    </div>
    <div begin="4s" end="5s">
      <p region="caption">Positive shear</p>
      <p region="horizontal" style="sBpd" tts:shear="100%">100%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="100%">100%<br/>三日坊主</p>
    </div>
    <div begin="5s" end="6s">
      <p region="caption">Negative shear</p>
      <p region="horizontal" style="sBpd" tts:shear="-16.78842%">-16.78842%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="-16.78842%">-16.78842%<br/>三日坊主</p>
    </div>
    <div begin="6s" end="7s">
      <p region="caption">Negative shear</p>
      <p region="horizontal" style="sBpd" tts:shear="-50%">-50%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="-50%">-50%<br/>三日坊主</p>
    </div>
    <div begin="7s" end="8s">
      <p region="caption">Negative shear</p>
      <p region="horizontal" style="sBpd" tts:shear="-64.333%">-64.333%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="-64.333%">-64.333%<br/>三日坊主</p>
    </div>
    <div begin="8s" end="9s">
      <p region="caption">Negative shear</p>
      <p region="horizontal" style="sBpd" tts:shear="-100%">-100%<br/>三日坊主</p>
      <p region="vertical" style="sBpd" tts:shear="-100%">-100%<br/>三日坊主</p>
    </div>
  </body>
</tt>
