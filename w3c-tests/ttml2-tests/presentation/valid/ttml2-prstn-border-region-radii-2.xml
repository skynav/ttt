<?xml version="1.0" encoding="UTF-8"?>
<tt xml:lang="en"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    ttp:profile="ttml2-presentation"
    tts:extent="1280px 720px"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2">
  <head>
    <metadata>
      <ttm:desc>#border-region (rounded, two radii)</ttm:desc>
    </metadata>
    <styling>
      <style xml:id="sBackground" tts:backgroundColor="#A0A0A0"/>
      <style xml:id="sBody" tts:fontSize="10rh" tts:lineHeight="12rh" tts:color="black" tts:textAlign="center"/>
      <style xml:id="sBorder" tts:border="10px solid red radii(20px,10px)"/>
      <style xml:id="sGeometry" tts:extent="320px 128px" tts:position="center bottom 10%"/>
      <style xml:id="sLayout" tts:displayAlign="center"/>
    </styling>
    <layout>
      <region xml:id="r1" style="sBackground sBorder sGeometry sLayout"/>
    </layout>
  </head>
  <body style="sBody">
    <div region="r1" begin="0s" end="1s">
      <p>Text</p>
    </div>
  </body>
</tt>
