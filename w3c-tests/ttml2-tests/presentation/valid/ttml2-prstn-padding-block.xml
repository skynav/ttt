<?xml version="1.0" encoding="UTF-8"?>
<tt xml:lang="en"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    ttp:profile="ttml2-presentation"
    tts:extent="1280px 720px"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2">
  <head>
    <metadata>
      <ttm:desc>#padding-block</ttm:desc>
    </metadata>
    <styling>
      <style xml:id="sBackground" tts:backgroundColor="#C0C0C0"/>
      <style xml:id="sBody" tts:fontSize="36px" tts:lineHeight="52px" tts:color="black" tts:textAlign="center"/>
      <style xml:id="sGeometry" tts:extent="480px 128px" tts:position="center"/>
      <style xml:id="sLayout" tts:displayAlign="center"/>
    </styling>
    <layout>
      <region xml:id="r1" style="sBackground sGeometry sLayout" tts:padding="28px"/>
    </layout>
  </head>
  <body style="sBody" tts:backgroundColor="#A0A0A0" tts:padding="10px">
    <div region="r1" begin="0s" end="1s" tts:backgroundColor="#90000040">
      <p>10px body padding</p>
    </div>
  </body>
</tt>
