<?xml version="1.0" encoding="UTF-8"?>
<tt xml:lang="en"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    ttp:profile="ttml2-presentation"
    tts:extent="1280px 720px"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml2"
    ttva:processingOptions="ttpe {svg-decorate-none;}">
  <head>
    <metadata>
      <ttm:desc>#textEmphasis-color</ttm:desc>
    </metadata>
    <styling>
      <initial tts:color="white"/>
      <style xml:id="sBackground" tts:backgroundColor="black"/>
      <style xml:id="sBody" tts:fontSize="24px" tts:lineHeight="32px" tts:textAlign="center"/>
      <style xml:id="sGeometry1" tts:extent="480px 128px" tts:position="center top 41.6px"/>
      <style xml:id="sGeometry2" tts:extent="480px 128px" tts:position="center top 211.2px"/>
      <style xml:id="sGeometry3" tts:extent="480px 128px" tts:position="center bottom 211.2px"/>
      <style xml:id="sGeometry4" tts:extent="480px 128px" tts:position="center bottom 41.6px"/>
      <style xml:id="sLayout" tts:displayAlign="center"/>
    </styling>
    <layout>
      <region xml:id="r1" style="sBackground sGeometry1 sLayout"/>
      <region xml:id="r2" style="sBackground sGeometry2 sLayout"/>
      <region xml:id="r3" style="sBackground sGeometry3 sLayout"/>
      <region xml:id="r4" style="sBackground sGeometry4 sLayout"/>
    </layout>
  </head>
  <body style="sBody">
    <div region="r1" begin="0s" end="1s">
      <p tts:textEmphasis="filled circle red">lorem ipsum</p>
    </div>
    <div region="r2" begin="0s" end="1s">
      <p tts:textEmphasis="filled circle lime">lorem ipsum</p>
    </div>
    <div region="r3" begin="0s" end="1s">
      <p tts:textEmphasis="filled circle blue">lorem ipsum</p>
    </div>
    <div region="r4" begin="0s" end="1s">
      <p tts:textEmphasis="filled circle current">lorem ipsum</p>
    </div>
  </body>
</tt>
