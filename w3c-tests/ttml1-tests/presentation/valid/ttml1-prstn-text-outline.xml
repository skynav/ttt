<?xml version="1.0" encoding="UTF-8"?>
<tt xml:lang="en"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter" ttp:profile="dfxp-presentation"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttva="http://skynav.com/ns/ttv/annotations" ttva:warnOn="all" ttva:expectedErrors="0" ttva:expectedWarnings="0" ttva:model="ttml1">
  <head>
    <metadata> 
      <ttm:desc>Test tts:textOutline attribute using 'c' value for the outline thickness.</ttm:desc>
    </metadata>
    <styling>
      <style xml:id="s1" tts:fontSize="1c" tts:textOutline="red 0.1c"/>
    </styling>
  </head>
  <body>
    <div>
      <p begin="0s" end="10s" style="s1">This text has a red outline with a radius equal to 10% of the font size.</p>
    </div>
  </body>
</tt>
